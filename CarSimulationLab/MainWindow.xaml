<Window x:Class="CarSimulationLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarSimulationLab"
        mc:Ignorable="d"
        Title="Car Simulation" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid x:Name="mainWindow">
        <Label x:Name="driverWindowLabel" Content="Driver Window" HorizontalAlignment="Left" Margin="139,361,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.05,0.219"/>
        <Label x:Name="gerShiftLabel" Content="Gear Shift" HorizontalAlignment="Left" Margin="355,248,0,0" VerticalAlignment="Top"/>
        <Label x:Name="domeLightLabel" Content="Dome Light" HorizontalAlignment="Left" Margin="350,30,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.206,-2.344"/>
        <Label x:Name="headLightsLabel" Content="Head Lights" HorizontalAlignment="Left" Margin="140,282,0,0" VerticalAlignment="Top"/>
        <Label x:Name="seatBeltLabel" Content="Seat Belt" HorizontalAlignment="Left" Margin="137,55,0,0" VerticalAlignment="Top"/>
        <Label x:Name="turnSignalLabel" Content="Turn Signal" HorizontalAlignment="Left" Margin="139,193,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ignitionLabel" Content="Ignition" HorizontalAlignment="Left" Margin="538,214,0,0" VerticalAlignment="Top"/>
        <Label x:Name="driverSeatLabel" Content="Driver Seat" HorizontalAlignment="Left" Margin="355,358,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.688,0.656"/>
        <Label x:Name="wipersLabel" Content="Windshield Wipers" HorizontalAlignment="Left" Margin="137,113,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.453,-0.563"/>
        <Label x:Name="breakLabel" Content="Brake" HorizontalAlignment="Left" Margin="526,335,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.97,0.563"/>
        <Label x:Name="driverDoorLabel" Content="Driver Door" HorizontalAlignment="Left" Margin="261,299,0,0" VerticalAlignment="Top"/>
        <Button x:Name="domeButton" Content="Light Off" HorizontalAlignment="Left" Margin="350,61,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="beltButton" Content="Not Buckled" HorizontalAlignment="Left" Margin="139,81,0,0" VerticalAlignment="Top" Width="75" Click="BeltButton_Click"/>
        <Button x:Name="breakButton" Content="Apply Brake" HorizontalAlignment="Left" Margin="513,369,0,0" VerticalAlignment="Top" Width="75"/>
        <RadioButton x:Name="wipersOnButton" Content="Wipers Off" HorizontalAlignment="Left" Margin="140,144,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="wipersOffButton" Content="Wipers On" HorizontalAlignment="Left" Margin="140,164,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="leftSignalButton" Content="Left Signal" HorizontalAlignment="Left" Margin="139,244,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="noSignalButton" Content="No Signal" HorizontalAlignment="Left" Margin="140,224,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="headLightsOnButton" Content="Lights On" HorizontalAlignment="Left" Margin="139,334,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton x:Name="headLightsOffButton" Content="Lights Off" HorizontalAlignment="Left" Margin="140,314,0,0" VerticalAlignment="Top"/>
        <Button x:Name="windowButton" Content="Window Up" HorizontalAlignment="Left" Margin="140,391,0,0" VerticalAlignment="Top" Width="75"/>
        <RadioButton x:Name="rightSignalButton" Content="Right Signal" HorizontalAlignment="Left" Margin="139,262,0,0" VerticalAlignment="Top"/>
        <Button x:Name="driverSeatButton" Content="Sit" HorizontalAlignment="Left" Margin="355,391,0,0" VerticalAlignment="Top" Width="75"/>
        <RadioButton x:Name="gearDriveButton" Content="Drive" HorizontalAlignment="Left" Margin="355,343,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="gearReverseButton" Content="Reverse" HorizontalAlignment="Left" Margin="355,305,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="gearParkButton" Content="Park" HorizontalAlignment="Left" Margin="355,282,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="gearNeutralButton" Content="Neutral" HorizontalAlignment="Left" Margin="355,325,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="driverDoorClosedButton" Content="Door Closed" HorizontalAlignment="Left" Margin="261,331,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="driverDoorOpenButton" Content="Door Open" HorizontalAlignment="Left" Margin="261,355,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="ignitionKeyOffButton" Content="Key Off" HorizontalAlignment="Left" Margin="538,270,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="ignitionAccessoryButton" Content="Accessory" HorizontalAlignment="Left" Margin="538,290,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="ignitionCarOnButton" Content="On" HorizontalAlignment="Left" Margin="538,309,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="ignitionNoKeyButton" Content="No Key" HorizontalAlignment="Left" Margin="538,247,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
